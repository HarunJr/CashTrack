<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_widget_transaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <TextView
        android:id="@+id/item_widget_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/material_space"
        android:layout_marginStart="@dimen/material_space"
        android:layout_marginTop="@dimen/material_space"
        android:textColor="@color/colorAccentDarkText"
        android:textSize="22sp"
        tools:text="@string/transaction_hint_description" />

    <TextView
        android:id="@+id/item_widget_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:gravity="end"
        android:text="@string/amount"
        android:layout_toRightOf="@id/item_widget_description"
        android:layout_toEndOf="@+id/item_widget_description"
        android:textColor="@color/colorAccentDarkText"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/item_widget_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_widget_description"
        android:layout_margin="@dimen/material_space"
        android:textColor="@color/colorAccentDarkText"
        android:textSize="14sp"
        tools:text="@string/transaction_date" />


    <!--<include-->
    <!--android:id="@+id/tv_widget_transactions"-->
    <!--layout="@layout/transaction_layout"-->
    <!--android:layout_margin="@dimen/material_space"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_width="match_parent" />-->

</RelativeLayout>
